<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>
		{include title|stripHtml}
		{if ! $presenter->isLinkCurrent(':Homepage:')}
			| {$contact->getName()}
		{/if}
	</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="{='/assets/index.css'|version}">
</head>

<body>

<div class="jumbotron">
	<div class="container">
		<div class="text-center">
			<h1 class="display-3">{include title}</h1>
			<p class="lead">{include description}</p>
			{block header}{/block}
		</div>
	</div>
</div>

<div class="top-menu-container" n:if=" ! $presenter->isLinkCurrent(':Homepage:')">
	<p class="top-menu-inner-container text-center">
		<a n:href=":Homepage:" class="btn btn-primary">
			<i class="fa fa-2x fa-home"></i>
			Home
		</a>
	</p>
</div>

<div class="container" n:ifset="content">
	{include content}
</div>

<script src="{='/assets/index.js'|version}" n:nonce></script>
{control disqus:script}
</body>
</html>
